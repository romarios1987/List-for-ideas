<div class="card card-body">
    <h3>Add Idea</h3>
    <form action="/ideas/add" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input title="Title Idea" id="title" type="text" class="form-control" name="title"
                   value="<%= typeof title != 'undefined' ? title : '' %>">
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea class="form-control" id="details" name="details"
                      rows="3"><%= typeof details != 'undefined' ? details : '' %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>