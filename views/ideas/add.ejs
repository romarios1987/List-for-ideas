<div class="card card-body">
    <h3>Idea</h3>
    <form action="/ideas" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input title="Title Idea" type="text" class="form-control" name="title" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea title="Details Idea" name="details" cols="30" class="form-control" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>